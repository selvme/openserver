<IfModule mod_rewrite.c>
    Options +FollowSymlinks
    IndexIgnore */*
    RewriteEngine On

    RewriteCond %{REQUEST_URI} !^/(web)
    RewriteRule ^assets/(.*)$ /web/assets/$1 [L]
    RewriteRule ^css/(.*)$ web/css/$1 [L]
    RewriteRule ^fonts/(.*)$ web/fonts/$1 [L]
    RewriteRule ^js/(.*)$ web/js/$1 [L]
    RewriteRule ^image/(.*)$ web/image/$1 [L]
    RewriteRule ^img/(.*)$ web/img/$1 [L]
    RewriteRule ^plugins/(.*)$ web/plugins/$1 [L]
    RewriteRule ^uploads/(.*)$ web/uploads/$1 [L]
    RewriteRule ^uploads_thumbs/(.*)$ web/uploads_thumbs/$1 [L]
    RewriteRule ^thumbs/(.*)$ web/thumbs/$1 [L]
    RewriteRule ^temp/(.*)$ web/temp/$1 [L]
    RewriteRule (.*) /web/$1

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /web/index.php
</IfModule>

